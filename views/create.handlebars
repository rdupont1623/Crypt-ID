<section class="d-flex justify-content-center row">
  <div class="col-auto">
    <h2 class="pt-4 font-monospace">Welcome, {{username}}!</h2>
  </div>
</section>

<section class="ps-4 pt-5">
    <h3 class="text-center pb-2 font-monospace">Report a sighting</h3>
    <p class="ps-5">Be sure to use our search feature to see if others have had a similar experience</p>
    <form class="d-flex flex-wrap justify-content-evenly form new-sighting-form" id="sighting">
      <div class="p-3 form-group">
        <label for="sighting-report">Report</label>
        <textarea class="form-input" id="sighting-report" name="sighting-report" required></textarea>
      </div>
      <div class="p-3 form-group">
        <label for="sighting-description">Description of cryptid</label>
        <textarea class="form-input" id="sighting-description" name="sighting-description" required></textarea>
      </div>
      <div class="p-3 form-group">
        <label for="sighting-location">Location of sighting</label>
        <input class="form-input" type="text" id="sighting-location" name="sighting-name" required />
      </div>
      <div class="p-3 form-group">
        <label for="sighting-time">Time Seen</label>
        <textarea class="p-3 form-input" id="sighting-time" name="sighting-time" placeholder="year-month-date hour:minute"required></textarea>
      </div>
      <div>
        <label for="category">Choose a category</label>
          <select name="category" id="category">
            <option value="1">Cryptid</option>
            <option value="2">UFO</option>
            <option value="3">Paranormal</option>
            <option value="4">Other</option>
          </select>
      </div>  
      <div class="p-3 pb-5 form-group">
        <button type="submit" class="btn btn-primary">Report</button>
      </div>
    </form>
  </div>

 {{#if posts.length}}
 <div class="col post-list">
  <h3 class="d-flex justify-content-center pb-3">Current Report:</h3>

  {{#each posts as |post|}}
  <div class="d-flex mb-2 px-5">
    <div class="col-md-8">
      <h4><a>{{description}}</a></h4>
      <p>Report: {{report}}</p>
      <p>Location: {{location}}</p>
    </div>
    <div class="col-md-4">
      <button id= "delete_button" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
    </div>
  </div>
  <div class="pb-4">
  </div>
  {{/each}}
 {{/if}}

</section>

<script src="./js/create.js"></script>